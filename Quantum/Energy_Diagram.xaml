<Window x:Class="Quantum.Energy_Diagram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantum"
        mc:Ignorable="d"
        Title="Energy_Diagram" Height="800" Width="500">
    <Grid HorizontalAlignment="Left">
        <local:MoleculeElement x:Name="Test" Margin="0" HorizontalAlignment="Left"/>
        <TextBox x:Name="MinVal" Text="-6" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="63" Margin="334,60,0,0"/>
        <TextBox x:Name="MaxVal" Text="-2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="66" Margin="334,26,0,0"/>
        <Button x:Name="UpdateBtn" Content="Обновить" HorizontalAlignment="Left" VerticalAlignment="Top" Height="34" Width="97" Margin="334,108,0,0" Click="UpdateBtn_Click"/>
    </Grid>
</Window>
