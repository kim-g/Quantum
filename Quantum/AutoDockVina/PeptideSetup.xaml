<Window x:Class="Quantum.AutoDockVina.PeptideSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantum.AutoDockVina"
        mc:Ignorable="d"
        Title="Добавить белок" Height="263" Width="523" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Название белка" Margin="0,0,0,10"/>
        <TextBox  Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" x:Name="PeptidNameTB" Margin="0,0,0,10"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Центр зоны докинга" Margin="0,0,0,10"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="X: "/>
            <TextBox x:Name="CenterXTB" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Y: "/>
            <TextBox x:Name="CenterYTB" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Z: "/>
            <TextBox x:Name="CenterZTB" Width="100"/>
        </StackPanel>
        <Label Grid.Column="0" Grid.Row="2" Content="Размер докинга" Margin="0,0,0,10"/>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="X: "/>
            <TextBox x:Name="SizeXTB" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Y: "/>
            <TextBox x:Name="SizeYTB" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Z: "/>
            <TextBox x:Name="SizeZTB" Width="100"/>
        </StackPanel>
        <Label Grid.Column="0" Grid.Row="3" Content="Нет файла" x:Name="FileName" Margin="0,0,0,10"/>
        <Button Grid.Column="3" Grid.Row="3" Content="Обзор..." Width="90" HorizontalAlignment="Right" Margin="0,0,0,10" Click="Button_Click"/>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" >
            <Button x:Name="OK_BTN" Content="Добавить" Margin="0,0,5,0"/> 
            <Button x:Name="Cancel_BTN" Content="Отменить" Margin="5,0,0,0"/> 
        </StackPanel>

    </Grid>
</Window>
