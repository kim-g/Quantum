<UserControl x:Name="userControl" x:Class="Quantum.LabelBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantum"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="NameLabel" Grid.Column="0" FontSize="{Binding FontSize, ElementName=userControl}" FontFamily="{Binding FontFamily, ElementName=userControl}" FontWeight="{Binding FontWeight, ElementName=userControl}" FontStyle="{Binding FontStyle, ElementName=userControl}" Foreground="{Binding Foreground, ElementName=userControl}" Background="{Binding Background, ElementName=userControl}" Content="текст" VerticalContentAlignment="Center" Padding="5,5,15,5" />
        <TextBox x:Name="TextEdit" Grid.Column="1" Text="Текст" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
